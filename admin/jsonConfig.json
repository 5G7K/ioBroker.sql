{
  "type": "tabs",
  "i18n": true,
  "items": {
    "dbTab": {
      "type": "panel",
      "label": "DB settings",
      "items": {
        "dbtype": {
          "type": "select",
          "options": [
            {"label": "MySQL",      "value": "mysql"},
            {"label": "PostgreSQL", "value": "postgresql"},
            {"label": "SQLite3",    "value": "sqlite"},
            {"label": "MS-SQL",     "value": "mssql"}
          ],
          "label": "DB Type",
          "sm": 12,
          "md": 4,
          "lg": 3
        },

        "host": {
          "newLine": true,
          "type": "text",
          "label": "Host",
          "hidden": "data.dbtype === 'sqlite'",
          "sm": 12,
          "md": 4,
          "lg": 3
        },
        "port": {
          "type": "number",
          "label": "Port",
          "hidden": "data.dbtype === 'sqlite'",
          "min": 1,
          "max": 65565,
          "sm": 12,
          "md": 4,
          "lg": 3
        },
        "dbname": {
          "type": "text",
          "label": "DB Name",
          "hidden": "data.dbtype === 'sqlite'",
          "sm": 12,
          "md": 4,
          "lg": 3
        },

        "user": {
          "newLine": true,
          "type": "text",
          "label": "User",
          "hidden": "data.dbtype === 'sqlite'",
          "sm": 12,
          "md": 4,
          "lg": 3
        },
        "password": {
          "type": "password",
          "label": "Password",
          "repeat": true,
          "hidden": "data.dbtype === 'sqlite'",
          "sm": 12,
          "md": 4,
          "lg": 3
        },


        "fileName": {
          "newLine": true,
          "type": "text",
          "label": "File for sqlite",
          "hidden": "data.dbtype !== 'sqlite'",
          "help": "Input path with the file name.",
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "requestInterval": {
          "type": "number",
          "label": "requestInterval",
          "hidden": "data.dbtype !== 'sqlite'",
          "sm": 12,
          "md": 6,
          "lg": 2
        },

        "encrypt": {
          "newLine": true,
          "type": "checkbox",
          "hidden": "data.dbtype !== 'mssql'",
          "label": "Encrypt",
          "sm": 12,
          "md": 6,
          "lg": 4
        },
        "round": {
          "hidden": "data.dbtype !== 'mssql'",
          "type": "number",
          "label": "Round real to",
          "sm": 12,
          "md": 6,
          "lg": 2
        },


        "multiRequests": {
          "newLine": true,
          "type": "checkbox",
          "hidden": "data.dbtype !== 'mssql'",
          "label": "Allow parallel requests",
          "sm": 12,
          "md": 6,
          "lg": 4
        },
        "maxConnections": {
          "type": "number",
          "hidden": "data.dbtype !== 'mssql'",
          "label": "Maximum concurrent connections",
          "sm": 12,
          "md": 6,
          "lg": 4
        },
        "doNotCreateDatabase": {
          "type": "checkbox",
          "hidden": "data.dbtype !== 'mssql'",
          "label": "Do not create database (already created)",
          "sm": 12,
          "md": 6,
          "lg": 4
        },

        "writeNulls": {
          "newLine": true,
          "type": "checkbox",
          "label": "Write NULL values on start/stop boundaries",
          "sm": 12
        },

        "_testConnection": {
          "newLine": true,
          "variant": "contained",
          "color": "primary",
          "disabled": "!_alive",
          "type": "sendto",
          "icon": "data:image/svg+xml;base64,",
          "command": "test",
          "jsonData": "{\"config\": {\"dbtype\": \"${data.dbtype}\", \"port\": \"${data.port}\", \"host\": \"${data.host}\", \"user\": \"${data.user}\", \"fileName\": \"${data.fileName}\", \"password\": \"${data.password}\"}}",
          "label": "Test connection"
        },

        "_resetDB": {
          "type": "sendto",
          "variant": "contained",
          "color": "primary",
          "icon": "data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIyNCIgaGVpZ2h0PSIyNCIgdmlld0JveD0iMCAwIDI0IDI0Ij48cGF0aCBmaWxsPSIjODAxMTExIiBkPSJNNiAxOWMwIDEuMS45IDIgMiAyaDhjMS4xIDAgMi0uOSAyLTJWN0g2djEyek0xOSA0aC0zLjVsLTEtMWgtNWwtMSAxSDV2MmgxNFY0eiIvPjwvc3ZnPgkJCQkJCQkJ",
          "disabled": "!_alive",
          "confirm": {
            "text": "Are you sure? All data will be dropped.",
            "title": "Please confirm",
            "ok": "Reset",
            "cancel": "Cancel"
          },
          "command": "test",
          "label": "Reset DB"
        }
      }
    },
    "defaultTab": {
      "type": "panel",
      "label": "Default settings",
      "items": {
        "debounce": {
          "type": "number",
          "sm": 12,
          "md": 6,
          "lg": 4,
          "min": 0,
          "label": "debounce"
        },
        "changesRelogInterval": {
          "type": "number",
          "label": "log changes interval(s)",
          "help": "0 = disable",
          "sm": 12,
          "md": 6,
          "lg": 4
        },
        "changesMinDelta": {
          "newLine": true,
          "type": "number",
          "label": "log changes minimal delta",
          "help": "0 = disable delta check",
          "sm": 12,
          "md": 6,
          "lg": 4
        },
        "retention": {
          "type": "select",
          "label": "retention",
          "options": [
            {
              "value": 0,
              "label": "keep forever"
            },
            {
              "value": 63072000,
              "label": "2 years"
            },
            {
              "value": 31536000,
              "label": "1 year"
            },
            {
              "value": 15811200,
              "label": "6 months"
            },
            {
              "value": 7948800,
              "label": "3 months"
            },
            {
              "value": 2678400,
              "label": "1 months"
            },
            {
              "value": 1209600,
              "label": "2 weeks"
            },
            {
              "value": 604800,
              "label": "1 week"
            },
            {
              "value": 432000,
              "label": "5 days"
            },
            {
              "value": 259200,
              "label": "3 days"
            },
            {
              "value": 86400,
              "label": "1 day"
            }
          ],
          "sm": 12,
          "md": 6,
          "lg": 4
        }
      }
    }
  }
}